.td-container{}

.td-tab{
    display: flex; align-items: center; justify-content: space-around;
}
.td-tab text{
    display: inline-block; padding: 20rpx 0; border-bottom: 8rpx solid white; color: #999999;
}
.td-tab text.active{
    border-bottom-color: #733429; color: #733429;
}


.td-single{
    border-bottom: 1rpx solid #eee;
    padding: 40rpx 0 40rpx 30rpx;
    display: flex;
    align-items: flex-start;
}
.td-pro{
    margin-left: 40rpx; flex: 1;
}
.td-pro ._b{ display: flex; align-items: center;  margin-bottom: 30rpx; }
.td-pro ._b:last-child{ margin-bottom: 0;}
.td-pro ._b ._mark{ padding: 15rpx 30rpx; font-size: 36rpx;}
.td-pro ._b ._mark._checked{ color:#ff3e02; text-shadow:0 10rpx 25rpx rgba(255, 62, 2, 0.3); }
.td-pro ._s{
    border-radius: 500rpx; border: 1rpx solid #eee; padding: 15rpx 30rpx; flex: 1;
    white-space: nowrap;font-size: 26rpx; display: flex; align-items: center; justify-content: space-between;
}
.td-pro ._s .iconfont{
    color: #333; font-size: 24rpx; border-radius: 100rpx; border: 1rpx solid #333; padding: 5rpx 6rpx; margin-left: 20rpx;
}
.td-pro ._s .iconfont.pause{
    color: #333; border-color: #333;
}
.td-pro ._s ._time{ margin-left: 20rpx; font-size: 20rpx; color: #999999; flex: 1; }
.td-single ._n, .tn-single ._n{
    margin-top: 15rpx; font-size: 24rpx; color: #999999;
}

.tn-single{
    border-bottom: 1rpx solid #eee;
    padding: 30rpx 40rpx;
    display: flex;
    align-items: center;
    justify-content: space-between;
}
.tn-single ._link{
   display: inline-block; padding: 10rpx 20rpx; font-size: 28rpx; border: 1rpx solid #d9d8d8; color: #d9d8d8; border-radius: 4rpx;
}
.tn-single ._link:active{
    border-color: #733429; color: #733429;
}
.canvas{
    width: 100%;
    height: 500rpx;
}
