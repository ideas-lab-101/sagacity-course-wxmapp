page{
    background-color: #f7f7f7;
}
.it-box{
}
.it-box ._d{
    text-align: left;
    margin-bottom: 30rpx;
    background-color: white;
    padding: 30rpx 40rpx;
}
.it-box ._d._noBack{
    background: none; padding: 0 40rpx 40rpx;
}
.it-box ._label{
    font-size: 30rpx;
    color: #999999;
    position: relative;
    display: flex;
    align-items: center;
    justify-content: space-between;
}
.it-box ._replace{
    padding: 40rpx 0; height: 200rpx;
}
.it-box ._label ._add{
    text-align: center;
    line-height: 60rpx;
    font-size: 32rpx;
    width: 60rpx;
    height: 60rpx;
    border: 1rpx solid #dbdbdb;
    color: #dbdbdb;
    border-radius: 500rpx;
}
.it-box ._label ._add:active{
    color: black;
    border-color: black;
}
.it-box ._button{
    border: 0 !important;
    padding: 0 180rpx;
    border-radius: 0;
    line-height: 2.8;
    color: white;
    font-size: 30rpx;
}
.it-input{
}
.it-input textarea{
    line-height: 1.6; padding: 40rpx 0; height: 200rpx;
}

.it-lesson{
    padding: 40rpx 0;
}
.it-lesson ._noData{
    color: #999999; font-size: 24rpx;
}
.it-lesson-single{
    display: flex; align-items: center; justify-content: space-between; padding: 20rpx 0;
}
.it-lesson-single .iconfont{ font-size: 38rpx; color: #999999; padding: 15rpx; }
.it-cont{
    margin-top: 20rpx; display: flex; align-items: center; justify-content: center; font-size: 32rpx;
}
.it-cont text{ display: inline-block; margin: 0 20rpx; font-size: 30rpx; }
.it-cont-picker{
    display: inline-block;
    padding: 20rpx;
}


