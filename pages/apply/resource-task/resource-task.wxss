.tm-container{
    padding: 40rpx;
}

.tm-single{
    display: flex; align-items: center; margin-bottom: 40rpx; padding: 20rpx;
    background-color: white;
    box-shadow:0 8rpx 20rpx rgba(0, 0, 0, 0.05);
}

.tm-single ._del{
    flex: 1; margin-left: 40rpx; display: flex; flex-direction: column;
}
.tm-single ._del ._name{
    font-weight: 500; font-size: 28rpx;
}
.tm-single ._del ._num{
    margin-top: 12rpx; font-size: 24rpx; color: #999999; display: inline-block;
}
.tm-single ._image{
    width: 120rpx; height: 120rpx;
}
.tm-single ._link{
    padding: 20rpx; color: #dedede;
}

.noDate{
    color: #999999; font-size: 20rpx; padding: 40rpx; text-align: center;
}
