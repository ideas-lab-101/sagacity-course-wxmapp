@import '/components/wxParse/wxParse.wxss';

.doc-box{
    padding: 20rpx;
}

.doc-fixed{
    position: fixed; z-index: 1000;
    right: 30rpx; bottom: 160rpx;
}
.doc-fixed ._s{
    display: flex; flex-direction: column; align-items: center; justify-content: center; font-size: 24rpx;
    border-radius: 500rpx; background-color: rgba(0, 0, 0, 0.45); color: white;
    width: 100rpx; height: 100rpx; line-height: normal; border: 0 !important; padding: 0;
    margin-top: 20rpx;
}
.doc-fixed ._s:active{
    background-color: rgba(0, 0, 0, 0.15);
}