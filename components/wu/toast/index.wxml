<wu-backdrop id="wu-backdrop" transparent="{{ true }}" />
<wu-animation-group wux-class="wux-toast" in="{{ in }}" class-names="wux-animate--fadeIn">
    <view class="wux-toast__bd {{ className }}">
        <icon wx:if="{{ type }}" type="{{ type }}" size="45" color="{{ color }}" class="wux-toast__icon" />
        <view class="wux-toast__text">{{ text }}</view>
    </view>
</wu-animation-group>