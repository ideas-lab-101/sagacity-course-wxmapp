.global-play-widget{
  position: relative;
  width: 100%;
  height: 140rpx;
  transition: all  0.5s ease-out;
}
.global-play-widget ._insert{
  position: fixed;
  width: 100%;
  left: 0;
  bottom: 0;
  z-index: 999;
}
.global-play-widget-insert{
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx 20rpx;
  margin: 0 20rpx 10rpx 20rpx;
  background-color: white;
  box-shadow: 0 0 20rpx rgba(0, 0, 0, 0.2);
}
.global-play-widget-insert>._close{
  transition: all 0.5s;
  color: #000000;
  width: 65rpx;
  height: 65rpx;
  line-height: 65rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}
.global-play-widget-insert>._close .iconfont{ font-size: 45rpx;}

.global-play-widget-insert>._img{
  padding-right: 15rpx;
}
.global-play-widget-insert>._img image{
  width: 90rpx;
  height: 90rpx;
  box-shadow: 0 10rpx 30rpx rgba(0, 0, 0, 0.15);
}
.global-play-widget-insert>._info{
  flex: 1;
  padding-right: 40rpx;
  font-size: 28rpx;
  overflow:hidden;
  text-overflow:ellipsis;
  white-space:nowrap;
}
.global-play-widget-insert>._info view{
  margin-top: 10rpx;
  font-size: 22rpx;
}

.global-play-widget-insert>._oper{
  color: #000000;
  width: 65rpx;
  height: 65rpx;
  line-height: 65rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}
.global-play-widget-insert>._oper .iconfont{ font-size: 45rpx;}

@import "/assets/styles/cloud-icon.wxss";