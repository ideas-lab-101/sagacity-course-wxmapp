.wux-backdrop,
.wux-backdrop--transparent {
  position: fixed;
  z-index: 1000;
  top: 0;
  right: 0;
  left: 0;
  bottom: 0;
}

.wux-backdrop-insert{
  width: 100%;
  height: 100%;
}

.wux-backdrop .wux-backdrop-insert{
  background: rgba(0, 0, 0, 0.4);
}

.wux-backdrop--transparent .wux-backdrop-insert{
  background: transparent !important;
}