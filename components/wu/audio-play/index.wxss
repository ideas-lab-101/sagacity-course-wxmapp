.play-slider{
  position: relative; width: 100%; height: 180rpx;
}
.play-slider ._insert{
    position: fixed; left: 0; right: 0; bottom: 0; z-index: 10; background-color: white; height: 180rpx;
    box-shadow: 0 -10rpx 40rpx rgba(0, 0, 0, 0.06);
}
.play-slider-del{
    display: flex; align-items: center;
}
.play-slider-del ._time{
   font-size: 22rpx; color: #999999;
    display: inline-block;
    padding: 20rpx;
    min-width: 60rpx;
    text-align: center;
}
.play-slider-del slider{
  flex: 1; margin-left: 0; margin-right: 0;
}
.play-slider-info{
    padding: 20rpx 40rpx;
}
.play-slider-info text{
    margin-right: 80rpx; font-size: 28rpx; font-weight: 500;
}
.play-slider-info text:last-child{
    margin-right: 0; font-weight: normal;
}
