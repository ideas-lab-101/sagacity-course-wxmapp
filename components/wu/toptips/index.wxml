<wu-animation-group wux-class="wux-toptips" in="{{ in }}" class-names="wux-animate--slideInDown">
    <view class="wux-toptips__content {{ icon ? 'wux-toptips__content--' + icon : 'wux-toptips__content--cancel' }}">
        <text>{{ text }}</text>
        <icon wx:if="{{ icon && !hidden }}" class="wux-toptips__icon" type="{{ icon }}" size="14" color="#fff" />
    </view>
</wu-animation-group>