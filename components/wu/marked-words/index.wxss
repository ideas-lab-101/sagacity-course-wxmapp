.wu-marked-words{
  position: fixed;
  left: 0;
  top: 0;
  z-index: 3999;
  width: 100vw;
  height: 100vh;
}

.wu-marked-words>._insert{
  width: 100%;
  height: 100%;
  position: relative;
}

.wu-marked-words-single{
  position: absolute;
  z-index: 3999;
  width: 100%;
  left: 0;
}

.wu-marked-words-single>._image{
  width: 100%;
  height: auto;
}

.wu-marked-words-single-o{
  position:absolute;
  z-index:3999;
  width:100%;
  left:0;
  background-color: rgba(255, 255, 255, 0.9);
}