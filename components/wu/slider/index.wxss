.wux-slider {
  position: relative;
  z-index: 1;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
}
.wux-slider__rail {
  width: 100%;
  height: 4rpx;
  margin: 30rpx 0;
  background-color: #e9e9e9;
  border-radius: 4rpx;
  vertical-align: middle;
  position: relative;
}
.wux-slider__track {
  position: absolute;
  left: 0;
  height: 4rpx;
  border-radius: 4rpx;
  background-color: #000;
}
.wux-slider__handle {
  background-color: #fff;
  border-radius: 100rpx;
  height: 36rpx;
  left: 0;
  top: 50%;
  position: absolute;
  display: flex;
  align-items: center;
  width: 140rpx;
  border: 1rpx solid rgba(0, 0, 0, 0.2);
  -webkit-transform: translate3d(0, -50%, 0);
          transform: translate3d(0, -50%, 0);
}
.wux-slider__handle--last {
  z-index: 2;
}
.wux-slider__mark {
  position: absolute;
  width: 8rpx;
  height: 8rpx;
  border-radius: 50%;
  background-color: #ccc;
  -webkit-transform: translateX(-50%);
          transform: translateX(-50%);
}
.wux-slider__min,
.wux-slider__max {
  font-size: 20rpx;
  color: #888;
  text-align: center;
  flex: 1;
}
